{
  "watch": ["src"],
  "ext": ".ts,.js",
  "ignore": [
    "logs/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*",
    "*.log"
  ],
  "exec": "ts-node ./src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "debug",
    "LOG_DIR": "logs"
  },
  "delay": 1000,
  "verbose": true,
  "colours": true,
  "restartable": "rs"
}